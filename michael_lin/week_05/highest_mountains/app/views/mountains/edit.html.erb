<h1>Edit Mountain</h1>

<form action="<%= mountain_path(@mountain.id) %>" method="post">
  <p>
    <label for="name">Name: </label>
    <input type="text" name="mountain[name]" id="name" placeholder="Mount Everest" value="<%= @mountain.name %>">
  </p>
  <p>
    <label for="location">Location: </label>
    <input type="text" name="mountain[location]" id="location" placeholder="Zambia" value="<%= @mountain.location %>">
  </p>
  <p>
    <label for="height">Height: </label>
    <input type="number" name="mountain[height]" id="height" placeholder="5472" value="<%= @mountain.height %>">
  </p>

  <p>
    <label for="first_ascent">First Ascent: </label>
    <input type="number" name="mountain[first_ascent]" id="first_ascent" placeholder="1926" value="<%= @mountain.first_ascent %>">
  </p>
  <p>
    <label for="image">Image: </label>
    <input type="url" name="mountain[image]" id="image" placeholder="http://fillmurray.com/400/380" value="<%= @mountain.image %>">
  </p>

  <button>Edit Mountain!</button>
</form>
